        {
          "name": "Auth › Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save token returned by login to environment",
                  "var jsonData = pm.response.json();",
                  "if (jsonData && (jsonData.token || (jsonData.data && jsonData.data.token))) {",
                  "  var t = jsonData.token || jsonData.data.token;",
                  "  pm.environment.set('token', t);",
                  "  console.log('Bearer token saved to environment.');",
                  "} else if (jsonData && jsonData.accessToken) {",
                  "  pm.environment.set('token', jsonData.accessToken);",
                  "}"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user2@gmail.com\",\n  \"password\": \"User@123#\"\n}"
            },
