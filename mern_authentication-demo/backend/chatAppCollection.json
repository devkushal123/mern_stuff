              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "chat", "unread"]
            }
          }
        },
        {
          "name": "Mark Messages As Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/chat/mark-read",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "chat", "mark-read"]
            }
          }
        }
      ]
